<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/clayout"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:background="@drawable/dlayout"
        android:textColor="@color/font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DASHBOARD"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add_money_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_money_btn"
        android:background="@drawable/blayout"
        android:textColor="@color/font"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Add money"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/show_qr_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/show_qr_btn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/blayout"
        android:textColor="@color/font"
        android:text="Show QR"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/payments_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_money_btn" />

    <Button
        android:id="@+id/payments_btn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/blayout"
        android:textColor="@color/font"
        android:text="PAYMENTS"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_qr_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>